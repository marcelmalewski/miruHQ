{
  "manifest_version": 3,
  "name": "MiruHQ",
  "version": "0.0.1",
  "description": "HQ for anime",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "MiruHQ"
  },
  "background": {
    "service_worker": "background.js"
  },
  "permissions": ["tabs"],
  "content_security_policy": {
    "extension_pages": "script-src 'self' 'wasm-unsafe-eval'; object-src 'self'"
  }
}
